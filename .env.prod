# Clara Training System - Production Environment
# Copy this file to .env for production deployment

# ===== Application Settings =====
CLARA_APP_NAME="Clara Training System"
CLARA_ENVIRONMENT=production
CLARA_DEBUG=false
CLARA_LOG_LEVEL=INFO

# ===== API Settings =====
CLARA_API_HOST=0.0.0.0
CLARA_API_PORT=8000
CLARA_API_WORKERS=8
CLARA_API_RELOAD=false

# ===== Backend Service Ports =====
CLARA_TRAINING_PORT=45680
CLARA_DATASET_PORT=45681

# ===== Worker Configuration =====
CLARA_MAX_CONCURRENT_JOBS=4
CLARA_WORKER_TIMEOUT=7200

# ===== Security Settings =====
CLARA_SECURITY_MODE=production  # Full security: JWT + mTLS
CLARA_JWT_ENABLED=true
CLARA_MTLS_ENABLED=true

# ===== Keycloak Settings =====
KEYCLOAK_URL=https://keycloak.vcc.local
KEYCLOAK_REALM=vcc
KEYCLOAK_CLIENT_ID=clara-training-system
JWT_ALGORITHM=RS256

# ===== Database Settings (UDS3) =====
# PostgreSQL
POSTGRES_HOST=192.168.178.94
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DATABASE=postgres
POSTGRES_SCHEMA=public

# ChromaDB
CHROMA_HOST=192.168.178.94
CHROMA_PORT=8000

# Neo4j
NEO4J_URI=bolt://192.168.178.94:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# CouchDB
COUCH_URL=http://192.168.178.94:32931
COUCH_USER=admin
COUCH_PASSWORD=admin

# ===== UDS3 Settings =====
UDS3_ENABLED=true
