# Clara Training System - Development Environment
# Copy this file to .env and adjust values as needed

# ===== Application Settings =====
CLARA_APP_NAME="Clara Training System"
CLARA_ENVIRONMENT=development
CLARA_DEBUG=true
CLARA_LOG_LEVEL=DEBUG

# ===== API Settings =====
CLARA_API_HOST=0.0.0.0
CLARA_API_PORT=8000
CLARA_API_WORKERS=4
CLARA_API_RELOAD=true

# ===== Backend Service Ports =====
CLARA_TRAINING_PORT=45680
CLARA_DATASET_PORT=45681

# ===== Worker Configuration =====
CLARA_MAX_CONCURRENT_JOBS=2
CLARA_WORKER_TIMEOUT=3600

# ===== Security Settings =====
CLARA_SECURITY_MODE=development  # production|development|debug|testing
# CLARA_JWT_ENABLED=true  # Uncomment to override security mode
# CLARA_MTLS_ENABLED=false  # Uncomment to override security mode

# ===== Keycloak Settings =====
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=vcc
KEYCLOAK_CLIENT_ID=clara-training-system
JWT_ALGORITHM=RS256

# ===== Debug Mode Settings (for debug/testing modes) =====
DEBUG_USER_ID=debug-user
DEBUG_USER_EMAIL=debug@clara.local
DEBUG_USER_ROLES=admin,trainer

# ===== Database Settings (UDS3) =====
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DATABASE=postgres
POSTGRES_SCHEMA=public

# ChromaDB
CHROMA_HOST=localhost
CHROMA_PORT=8000

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# CouchDB
COUCH_URL=http://localhost:5984
COUCH_USER=admin
COUCH_PASSWORD=admin

# ===== UDS3 Settings =====
UDS3_ENABLED=false  # Set to true if UDS3 dependencies are available
