# Clara Training System - Testing Environment
# Used for pytest and integration tests

# ===== Application Settings =====
CLARA_APP_NAME="Clara Training System - Test"
CLARA_ENVIRONMENT=testing
CLARA_DEBUG=true
CLARA_LOG_LEVEL=DEBUG

# ===== API Settings =====
CLARA_API_HOST=127.0.0.1
CLARA_API_PORT=8001  # Different port for tests
CLARA_API_WORKERS=2
CLARA_API_RELOAD=false

# ===== Backend Service Ports =====
CLARA_TRAINING_PORT=45690  # Different ports for test isolation
CLARA_DATASET_PORT=45691

# ===== Worker Configuration =====
CLARA_MAX_CONCURRENT_JOBS=1
CLARA_WORKER_TIMEOUT=60

# ===== Security Settings =====
CLARA_SECURITY_MODE=testing  # Mock JWT tokens
CLARA_JWT_ENABLED=false
CLARA_MTLS_ENABLED=false

# ===== Debug Mode Settings (used in testing mode) =====
DEBUG_USER_ID=test-user
DEBUG_USER_EMAIL=test@clara.local
DEBUG_USER_ROLES=admin,trainer,analyst

# ===== Database Settings (UDS3) =====
# PostgreSQL (Test DB)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DATABASE=test_clara
POSTGRES_SCHEMA=public

# ChromaDB (Mock)
CHROMA_HOST=localhost
CHROMA_PORT=8001

# Neo4j (Mock)
NEO4J_URI=bolt://localhost:7688
NEO4J_USER=neo4j
NEO4J_PASSWORD=test

# CouchDB (Mock)
COUCH_URL=http://localhost:5985
COUCH_USER=admin
COUCH_PASSWORD=test

# ===== UDS3 Settings =====
UDS3_ENABLED=false  # Use mock backends for tests
